.common-tabs
  min-width 100%
  text-transform uppercase
  letter-spacing rem(.5)
  display table
  &__tab
    background gray1
    display table-cell
    height rem(60)
    color gray6
    font-weight bold
    font-size rem(12)
    text-align center
    vertical-align middle
    width 1%
    padding rem(5)
    transition background .3s
    &--big-text
      +above(lg)
        font-size rem(18)
      +above(md)
        font-size rem(16)
    +below(xs)
      font-size rem(10)
      // display inline-block
      // width 100%
      // vertical-align middle
      // padding-top rem(5)
      // padding-bottom rem(5)
    &:hover
    &.current
      background orange
      color gray6
    +below(xs)
      height rem(48)
      display flex
      width 100%
      align-items: center;
      justify-content: center;
